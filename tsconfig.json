{
  "compilerOptions": {
    "strict": true,
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    // 告诉编辑器你需要的语法提示的版本
    "lib": ["es6"]
  },
  "include": ["src", "types"]
}
